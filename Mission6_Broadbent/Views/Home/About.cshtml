@{
    ViewData["Title"] = "About Joel";
}

<div class="container mt-5">

    <!-- Page Header -->
    <div class="text-center mb-4">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <p class="lead text-muted">
            Learn more about Joel, his comedy, and his podcast.
        </p>
    </div>

    <!-- Content Row -->
    <div class="row justify-content-center">

        <div class="col-md-8">

            <!-- About Text Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">

                    <p class="card-text">
                        Joel performs regularly at 
                        <strong>Quick Wits Comedy</strong>, delivering sharp improvisational humor 
                        and live performances.
                    </p>

                    <a href="https://www.qwcomedy.com/" target="_blank" class="btn btn-primary mb-3">
                        Visit Quick Wits Comedy
                    </a>

                    <p class="card-text">
                        He also hosts a weekly podcast focused on films and pop culture called 
                        <strong>Baconsale</strong>.
                    </p>

                    <a href="https://baconsale.com/" target="_blank" class="btn btn-outline-dark">
                        Listen to the Podcast
                    </a>

                </div>
            </div>

            <!-- Podcast Image Card -->
            <div class="card shadow text-center p-4">

                <a href="https://baconsale.com/" target="_blank">
                    <img src="~/img/Baconsale.jpg"
                         alt="Baconsale Podcast"
                         class="img-fluid rounded mb-3"
                         style="max-width: 300px;" />
                </a>

                <h4>Baconsale Podcast</h4>
                <p class="text-muted mb-0">
                    Click the image to visit the official site and listen to episodes.
                </p>

            </div>

        </div>
    </div>
</div>